{
  "name": "six-cities",
  "version": "5.0.1",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.js",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "copyfiles package.json dist/ && tsc -p tsconfig.json && copyfiles -u 1 mocks/* dist/mocks/",
    "clean": "rimraf dist",
    "ts": "ts-node"
  },
  "devDependencies": {
    "@types/node": "18.17.17",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "copyfiles": "^2.4.1",
    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "rimraf": "5.0.1",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "chalk": "^5.4.1"
  }
}
